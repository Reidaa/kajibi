{
  "kind": "collectionType",
  "collectionName": "prizes",
  "info": {
    "singularName": "prize",
    "pluralName": "prizes",
    "displayName": "Prize"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "text_color": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "options": {
        "format": "hex"
      }
    },
    "bg_color": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "options": {
        "format": "hex"
      }
    },
    "use_text_color": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "integer",
      "default": 100,
      "min": 0
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "mappedBy": "prizes"
    },
    "reels": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::reel.reel",
      "inversedBy": "prizes"
    },
    "posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post.post",
      "mappedBy": "prizes"
    }
  }
}
