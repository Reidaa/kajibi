{
  "kind": "collectionType",
  "collectionName": "prizes",
  "info": {
    "singularName": "prize",
    "pluralName": "prizes",
    "displayName": "Prize"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "name", "required": true },
    "icon": { "type": "media", "multiple": false, "required": false, "allowedTypes": ["images", "files"] },
    "text_color": {
      "type": "string",
      "customField": "plugin::color-picker.color",
      "options": { "format": "hex" }
    },
    "bg_color": {
      "type": "string",
      "customField": "plugin::color-picker.color",
      "options": { "format": "hex" }
    },
    "use_text_color": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "integer",
      "default": 100,
      "min": 0
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "inversedBy": "prizes"
    }
  }
}
